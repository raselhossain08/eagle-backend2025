# Tax Provider Configuration
# Copy these settings to your .env file and update with your actual credentials

# ==============================================
# TAX CALCULATION SETTINGS
# ==============================================
TAX_CALCULATION_ENABLED=true
DEFAULT_TAX_RATE=8.25
TAX_ROUNDING_METHOD=nearest
TAX_DECIMAL_PLACES=2
TAX_CACHE_ENABLED=true
TAX_CACHE_TTL=3600
DEFAULT_CURRENCY=USD

# ==============================================
# STRIPE TAX CONFIGURATION
# ==============================================
STRIPE_TAX_ENABLED=true
STRIPE_TAX_PRIORITY=1
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_API_URL=https://api.stripe.com

# ==============================================
# TAXJAR CONFIGURATION
# ==============================================
TAXJAR_ENABLED=false
TAXJAR_PRIORITY=2
TAXJAR_API_TOKEN=your_taxjar_api_token_here
TAXJAR_API_URL=https://api.taxjar.com
TAXJAR_API_VERSION=v2

# ==============================================
# AVALARA AVATAX CONFIGURATION
# ==============================================
AVALARA_ENABLED=false
AVALARA_PRIORITY=3
AVALARA_ACCOUNT_ID=your_avalara_account_id
AVALARA_LICENSE_KEY=your_avalara_license_key
AVALARA_COMPANY_CODE=DEFAULT
AVALARA_ENVIRONMENT=sandbox
AVALARA_API_URL=https://rest.avatax.com

# ==============================================
# MANUAL/FALLBACK TAX CONFIGURATION
# ==============================================
MANUAL_TAX_PRIORITY=99

# ==============================================
# PRODUCTION SETTINGS (Uncomment for production)
# ==============================================
# NODE_ENV=production
# STRIPE_TAX_ENABLED=true
# TAXJAR_ENABLED=true
# AVALARA_ENABLED=true
# AVALARA_ENVIRONMENT=production
# TAX_CACHE_PROVIDER=redis

# ==============================================
# DEVELOPMENT SETTINGS (Default)
# ==============================================
# NODE_ENV=development
# STRIPE_TAX_ENABLED=false
# TAXJAR_ENABLED=false
# AVALARA_ENABLED=false
# MANUAL_TAX_ENABLED=true